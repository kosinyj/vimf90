snippet use
  use <++>,    only : <++>
endsnippet

snippet do
do ${1:<do>} = ${2:<range>}
  ${3:<++Start Typing++>}
end do ! $1
endsnippet

snippet if
if (${1:<if>}) then
  ${2:<++Start Typing++>}
end if ! $1
endsnippet

snippet ifs
if (${1:<if>}) ${2:<++Start Typing++>}
endsnippet

snippet ife
if (${1:<if>}) then
  ${2:<++Start Typing++>}
else
  ${3:<++Start Typing++>}
end if ! $1
endsnippet

snippet ifef
if (${1:<if>}) then
  ${2:<++Start Typing++>}
else if (${3:<++if++>})
  ${4:<++Start Typing++>}
end if ! $1
endsnippet

snippet ifefe
if (${1:<if>}) then
  ${2:<++Start Typing++>}
else if (${3:<++if++>})
  ${4:<++Start Typing++>}
else
  ${5:<++Start Typing++>}
end if ! $1
endsnippet

snippet sel
select case (${1:<case>})
case (${2:<++var1++>})
${3:<++Start Typing++>}
case default
${4:<++default++>}
end select ! $1
endsnippet

snippet cas
case (${1:<++var1++>})
${2:<++Start Typing++>}
endsnippet
